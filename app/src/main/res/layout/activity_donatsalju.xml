<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_donatsalju"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.indonesiaandroidkejar.donatasrama.Snow">
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="270sp"
        app:srcCompat="@drawable/donatsalju"
        android:id="@+id/donatsalju"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:text="Ini adalah donat salju, ia terbuat dari tepung terigu yang telah diaduk dengantelur secukupnya dan di goreng dengan minyak dengan panas yang pas tak luput juga kami beri bahan-bahan lainnya seperti gula,perasa,dll, dan terakhir donat ini di taburu bubuk gula halus yang seperti salju. Harga satuan donat ini adalah Rp.1500, murah meriah bukan."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/textView"
        android:layout_below="@id/donatsalju"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="<"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/kembali" />


</RelativeLayout>
